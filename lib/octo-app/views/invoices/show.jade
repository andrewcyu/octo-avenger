extends ../../../common/views/layout

block content
  .row
    .col-md-4
      h1=invoice.name
    .col-md-8
      h1=invoice.hours
    .col-md-4
      h1
  p
    a(href='/invoices') Back to Invoices
  p
    a(href='/invoices/#{invoice.id}/edit') Edit
  p
    form.center.form-inline.confirm(action="/invoices/"+invoice.id, method="post")
      input(type="hidden", name="_method", value="DELETE")
      button.btn.btn-xs.btn-danger(type="submit") Delete
